<EditForm Model="@applicant_infos" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@applicant_infos.applicant_Name" class="form-control" />
                <ValidationMessage For="@(() => applicant_infos.applicant_Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Gender: </label>
            <div>
                <InputText @bind-Value="@applicant_infos.applicant_Gender" class="form-control" />
                <ValidationMessage For="@(() => applicant_infos.applicant_Gender)" />
            </div>
        </div>

        <div class="form-group">
            <label>Contact Number: </label>
            <div>
                <InputText @bind-Value="@applicant_infos.applicant_Contact" class="form-control" />
                <ValidationMessage For="@(() => applicant_infos.applicant_Contact)" />
            </div>
        </div>

        <div class="form-group">
            <label>Email: </label>
            <div>
                <InputText @bind-Value="@applicant_infos.applicant_email" class="form-control" />
                <ValidationMessage For="@(() => applicant_infos.applicant_email)" />
            </div>
        </div>

        <div class="form-group">
            <label>Qualification: </label>
            <div>
                <InputText @bind-Value="@applicant_infos.applicant_qualification" class="form-control" />
                <ValidationMessage For="@(() => applicant_infos.applicant_qualification)" />
            </div>
        </div>

        <div class="form-group">
            <label>Salary: </label>
            <div>
                <InputText @bind-Value="@applicant_infos.applicant_salary" class="form-control" />
                <ValidationMessage For="@(() => applicant_infos.applicant_salary)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="applicant_infos" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public applicant_info applicant_infos { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
